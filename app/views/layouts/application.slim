doctype html
html
  head
    meta charset="utf-8"
    meta name="ROBOTS" content="NOODP"
    title Afterwork
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  body
    .navbar.navbar-inverse.navbarfixed-top role='navigation'
      .container
        .navbar-header
          h1 = link_to 'AFTERWORK', root_path
        ul.nav.navbar-nav.list-unstyled
          - if current_user
            li =link_to 'Sign out', destroy_user_session_path, method: :delete
            li =link_to 'Profile', user_path(current_user)
            li =link_to 'Availabilities', user_availabilities_path(current_user)
          -else
            li =link_to 'Sign in', new_user_session_path
            li =link_to 'Sign in with Twitter', user_omniauth_authorize_path(:twitter)
            li =link_to 'Sign up', new_user_registration_path
          li =link_to 'Events', events_path

    .row 
      .container
        = render 'flashes'
        = yield
        = render 'javascript'
